.my_container {
  top: 0rpx;
}

.index_top {
  width: 100%;
  height: 156rpx;
  position: relative;
  z-index: 999;
}

.my_header {
  width: 100%;
  height: 156rpx;
  position: relative;
  top: 12rpx;
  z-index: 99;
}

.my_container {
  position: absolute;
  top: 168rpx;
  bottom: 0;
  left: 0;
  width: 100%;
}

.my_wrap {
  width: 100%;
  height: auto;
  box-sizing: border-box;
  padding: 0rpx 4rpx 0 4rpx;
}

.list {
  width: 95%;
  height: 130rpx;
  box-sizing: border-box;
  /* background-color: rgba(246, 246, 246, 1); */
  /* margin-bottom: 10rpx; */
  display: flex;
  flex-flow: row nowrap;
  border-bottom: 2rpx solid rgb(246, 246, 246);
  position: relative;
  left: 4%;
  background-color: white;
  transition: all .2s ease;
}

.list-img {
  width: 86rpx;
  height: 86rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-left: 16rpx;
  margin-top: 11rpx;
  display: inline-block;
  position: relative;
  top: 6rpx;
}

.list-img image {
  width: 100%;
  height: 100%;
}

.list-name {
  display: inline-block;
  height: 100%;
  width: 560rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  padding-left: 46rpx;
  box-sizing: border-box;
  display: flex;
  flex-flow: column wrap;
}

.list-gender {
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  display: inline-block;
  display: flex;
  align-items: center;
  justify-content: center;
}

.list-text {
  width: auto;
  height: 30%;
  display: inline-block;
  position: relative;
  display: flex;
  position: relative;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: flex-start;
}

.list_time {
  width: auto;
  height: 30%;
  display: flex;
  position: relative;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: flex-start;
  font-size: 30rpx;
}

.list_time text {
  height: 100%;
  width: auto;
  color: #737373;
  font-size: 26rpx;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: flex-start;
}

.list-gender image {
  width: 100%;
  height: 100%;
}

.guanzhu {
  border: 2rpx solid #f2709c;
  border-radius: 4rpx;
  color: #f2709c;
  position: absolute;
  right: 20rpx;
  height: 44rpx;
  top: 27rpx;
  line-height: 44rpx;
  text-align: center;
  font-size: 24rpx;
  width: auto;
  padding: 0 8rpx;
  transition: all .3s ease;  
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: center;
}

.diary_loading {
  top: 6rpx;
}

