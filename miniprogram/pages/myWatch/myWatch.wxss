.my_container {
  top: 0rpx;
}


.list {
  width: 100%;
  height: 100rpx;
  box-sizing: border-box;
  /* background-color: rgba(246, 246, 246, 1); */
  /* margin-bottom: 10rpx; */
  display: flex;
  flex-flow: row nowrap;
  border-bottom: 2rpx solid rgb(246, 246, 246);
  position: relative;
  background-color: white;
  transition: all .2s ease;
}

.list-img {
  width: 76rpx;
  height: 76rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-left: 16rpx;
  margin-top: 11rpx;
  display: inline-block;
}

.list-img image {
  width: 100%;
  height: 100%;
}

.list-name {
  display: inline-block;
  height: 100%;
  width: 360rpx;
  line-height: 100rpx;
  font-size: 28rpx;
  padding-left: 22rpx;
  box-sizing: border-box;
}

.list-gender {
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  display: inline-block;
  position: absolute;
  top: 10rpx;
  right: -38rpx;
}

.list-text {
  width: auto;
  height: 100%;
  display: inline-block;
  position: relative;
}

.list-gender image {
  width: 100%;
  height: 100%;
}

.guanzhu {
  border: 2rpx solid #f2709c;
  border-radius: 4rpx;
  color: #f2709c;
  position: absolute;
  right: 20rpx;
  height: 44rpx;
  top: 27rpx;
  line-height: 44rpx;
  text-align: center;
  font-size: 24rpx;
  width: auto;
  padding: 0 8rpx;
  transition: all .3s ease;  
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: center;
}

.diary_loading {
  top: 6rpx;
}