  position: relative;
  overflow: hidden;
}

.detail-img-load {
  position: relative
}

.detail-img-load image {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  border-radius: 10rpx;
}

.detail-img-more:first-child {
  border-top: none;
}

.detail-img-more:nth-child(2) {
  border-top: none;
}

.detail-img-more:nth-child(3) {
  border-top: none;
}

.detail-img-more:nth-child(3n+1) {
  margin-left: 0;
}

.detail-img-more:nth-child(3n + 3) {
  margin-right: 0;
  border-right: none;
}


