/* pages/my/my.wxss */
.my {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  top: 0;
}

.my_bg {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
}

.my_bg image {
  width: 100%;
  height: 100%;
}

.my_header {
  width: 100%;
  height: 400rpx;
  position: relative;
}

.my_container {
  position: absolute;
  top: 400rpx;
  bottom: 0;
  left: 0;
  width: 100%;
  
}

.my_wrap {
  width: 100%;
  height: auto;
  box-sizing: border-box;
  padding: 0 12rpx;
}

