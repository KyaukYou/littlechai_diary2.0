  border-radius: 50%;
}

.version_top_borderX {
  position: absolute;
  top: 62rpx;
  left: -9%;
  width: 4rpx;
  bottom: -60rpx;
  margin-left: -2rpx;
}

.current .version_top_borderX {
  top: 70rpx;
}

.version_top_circleX {
  position: absolute;
  bottom: -100rpx;
  width: 26rpx;
  height: 26rpx;
  border-radius: 50%;
  border: 4rpx solid rgb(255,255,255);
  left: -9%;
