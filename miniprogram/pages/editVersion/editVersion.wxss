.my_container {
  top: 0rpx;
}

.my {
  
}

.up-cell {
  width: 82%;
  height: auto;
  margin: 0rpx auto 44rpx 12%;
  box-sizing: border-box;
  padding: 0 8rpx 8rpx 8rpx;
  /* background-color: rgb(240, 240, 240); */
  /* background: -webkit-linear-gradient(to right, #ee9ca7, #f7c3c9); */
  /* background: linear-gradient(to right, #ee9ca7, #f7c3c9);  */
  color: white;
  border-radius: 10rpx;
  font-size: 30rpx;
  position: relative;
  left: 0%;
  box-shadow: 0px 14px 8px -12px rgba(148, 148, 148, 0.8), 0px -14px 8px -14px rgba(148, 148, 148, 0.65);
  /* box-shadow: 2px 2px 10px #c7ccd7; */
  opacity: 0.8;
  position: relative;
}

.up-icon {
  position: absolute;
  left: -9%;
  top: 10rpx;
  color: #f2709c;
}

.up-border {
  position: absolute;
  width: 4rpx;
  background: -webkit-linear-gradient(to right, #f2709c, #ff9472); /* Chrome 10-25, Safari 5.1-6 */
  background: linear-gradient(to right, #f2709c, #ff9472);
  left: -6.8%;
  top: 52rpx;
  bottom: -46rpx;
}

.top-cell {
  width: 84%;
  position: absolute;
  height: 40rpx;
  top: 0;
  right: 5%;
}

.up-border-current {
  position: absolute;
  width: 4rpx;
  /* background: -webkit-linear-gradient(to right, #f2709c, #ff9472); */
  /* background: linear-gradient(to right, #f2709c, #ff9472); */
  left: -6.8%;
  top: 0;
  height: 46rpx;
}

.up-show {
  width: 100%;
  height: auto;
  padding: 4rpx 14rpx 6rpx 18rpx;
  box-sizing: border-box;
}

.ver {
  width: 100%;
  height: auto;
  line-height: 50rpx;
  font-size: 32rpx;
  padding: 4rpx 16rpx 4rpx 18rpx;
  /* background-color: #35c1f8; */
  box-sizing: border-box;
  border-top-left-radius: 8rpx;
  border-top-right-radius: 8rpx;
  color: #fff;
  font-weight: 400;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: flex-start;
  margin-bottom: 8rpx;
  position: relative;
}

.current {
  /* background: -webkit-linear-gradient(to right, #f2709c, #ff9472); */
  /* background: linear-gradient(to right, #f2709c, #ff9472); */
  opacity: 1;
}

