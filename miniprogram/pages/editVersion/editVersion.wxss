.version_top_border {
  position: absolute;
  top: 0;
  left: 6%;
  width: 4rpx;
  height: 154rpx;
  margin-left: -2rpx;
}

.version_top_circle {
  position: absolute;
  top: 160rpx;
  width: 26rpx;
  height: 26rpx;
  border-radius: 50%;
  border: 4rpx solid rgb(255,255,255);
  left: 6%;
  margin-left: -17rpx;
}

.version_top_circle_sm {
  position: absolute;
  width: 18rpx;
