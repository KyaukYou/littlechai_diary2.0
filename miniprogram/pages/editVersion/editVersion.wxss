/* pages/update/update.wxss */
.my_container {
  top: 0rpx;
}

.my {
  
}

.up-cell {
  width: 82%;
  height: auto;
  margin: 0rpx auto 44rpx 12%;
  box-sizing: border-box;
  padding: 0 8rpx 8rpx 8rpx;
  /* background-color: rgb(240, 240, 240); */
  /* background: -webkit-linear-gradient(to right, #ee9ca7, #f7c3c9); */
  /* background: linear-gradient(to right, #ee9ca7, #f7c3c9);  */
  color: white;
  border-radius: 10rpx;
  font-size: 30rpx;
  position: relative;
  left: 0%;
  box-shadow: 0px 14px 8px -12px rgba(148, 148, 148, 0.8), 0px -14px 8px -14px rgba(148, 148, 148, 0.65);
  /* box-shadow: 2px 2px 10px #c7ccd7; */
  opacity: 0.8;
  position: relative;
}

.up-icon {
  position: absolute;
  left: -9%;
  top: 10rpx;
  color: #f2709c;
}

.up-border {
  position: absolute;
  width: 4rpx;
  background: -webkit-linear-gradient(to right, #f2709c, #ff9472); /* Chrome 10-25, Safari 5.1-6 */
  background: linear-gradient(to right, #f2709c, #ff9472);
  left: -6.8%;
  top: 52rpx;
  bottom: -46rpx;
}

.top-cell {
  width: 84%;
  position: absolute;
  height: 40rpx;
  top: 0;
  right: 5%;
}

.up-border-current {
  position: absolute;
  width: 4rpx;
  /* background: -webkit-linear-gradient(to right, #f2709c, #ff9472); */
  /* background: linear-gradient(to right, #f2709c, #ff9472); */
  left: -6.8%;
  top: 0;
  height: 46rpx;
}

.up-show {
  width: 100%;
  height: auto;
  padding: 4rpx 14rpx 6rpx 18rpx;
  box-sizing: border-box;
}

.ver {
  width: 100%;
  height: auto;
  line-height: 50rpx;
  font-size: 32rpx;
  padding: 4rpx 16rpx 4rpx 18rpx;
  /* background-color: #35c1f8; */
  box-sizing: border-box;
  border-top-left-radius: 8rpx;
  border-top-right-radius: 8rpx;
  color: #fff;
  font-weight: 400;
}

.current {
  /* background: -webkit-linear-gradient(to right, #f2709c, #ff9472); */
  /* background: linear-gradient(to right, #f2709c, #ff9472); */
  opacity: 1;
}

.my_wrap {
  padding-top: 30rpx;
  background-color: rgb(247, 247, 247);
}

.version_top_border {
  position: absolute;
  top: 0;
  left: 6%;
  width: 4rpx;
  height: 54rpx;
  margin-left: -2rpx;
}

.version_top_circle {
  position: absolute;
  top: 60rpx;
  width: 26rpx;
  height: 26rpx;
  border-radius: 50%;
  border: 4rpx solid rgb(255,255,255);
  left: 6%;
  margin-left: -17rpx;
}

.version_top_circle_sm {
  position: absolute;
  width: 18rpx;
  height: 18rpx;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  border-radius: 50%;
}

.version_top_borderX {
  position: absolute;
  top: 62rpx;
  left: -9%;
  width: 4rpx;
  bottom: -60rpx;
  margin-left: -2rpx;
}

.current .version_top_borderX {
  top: 70rpx;
}

.version_top_circleX {
  position: absolute;
  bottom: -100rpx;
  width: 26rpx;
  height: 26rpx;
  border-radius: 50%;
  border: 4rpx solid rgb(255,255,255);
  left: -9%;
  margin-left: -17rpx;
}

.version_top_circle_smX {
  position: absolute;
  width: 18rpx;
  height: 18rpx;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  border-radius: 50%;
}

.up-cell:last-child .version_top_borderX {
  bottom: -108rpx;
}

.up-cell:last-child .version_top_circleX {
  display: none;
}

.new_version {
  width: 100%;
  height: auto;
  display: flex;
  flex-flow: column wrap;
  margin-bottom: 4rpx;
}

.new_version_title {
  box-sizing: border-box;
  width: 100%rpx;
  height: 58rpx;
  line-height: 58rpx;
  padding-left: 0rpx;
  font-size: 30rpx;
}

.new_version_info {
  width: 100%;
  height: auto;
  box-sizing: border-box;
  padding-left: 18rpx;
}

.new_version_info_list {
  display: inline-block;
  width: 100%;
  height: auto;
  min-height: 46rpx;
  line-height: 46rpx;
  margin: 0 0 8rpx 0;
  position: relative;
}

.new_version_titleX {
  display: inline-block;
  width: 40rpx;
  position: absolute;
  left: 0;
  top: 0;
}

.new_itemX {
  display: inline-block;
  background-color: rgba(0, 0, 0, 0.2);
  padding: 2rpx 12rpx;
  width: auto;
  box-sizing: border-box;
  margin-left: 40rpx;
}